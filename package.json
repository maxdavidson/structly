{
  "name": "structly",
  "version": "0.5.0",
  "license": "MIT",
  "description": "Tool for working with binary data types in JavaScript",
  "author": "Max Davidson <davidsonmax@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxdavidson/structly.git"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=4.6.0",
    "npm": ">=2.15.9"
  },
  "main": "dist/commonjs/index.js",
  "module": "dist/es2015/index.js",
  "jsnext:main": "dist/es2015/index.js",
  "browser": "dist/structly.js",
  "typings": "dist/typings/index.d.ts",
  "scripts": {
    "build": "npm run build:commonjs & npm run build:umd",
    "build:commonjs": "tsc --module commonjs --outDir dist/commonjs",
    "build:umd": "tsc --declaration --declarationDir dist/typings && rollup --config",
    "clean": "rimraf dist coverage .nyc_output",
    "lint": "tslint --project tsconfig.json --format stylish",
    "prebuild": "npm run clean",
    "test": "jest",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "run-s clean build:commonjs",
    "posttest": "npm run lint",
    "preversion": "npm test",
    "prepublish": "npm run build"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "binary",
    "pod",
    "struct",
    "record",
    "serialize",
    "encode",
    "decode",
    "convert",
    "pack",
    "unpack"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "_\\w*.\\w+$"
    ]
  },
  "dependencies": {
    "@types/node": "^6.0.38"
  },
  "devDependencies": {
    "@types/jest": "^15.1.32",
    "coveralls": "^2.11.14",
    "jest": "^16.0.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.0",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.0.9",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-plugin-uglify": "^1.0.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  }
}
