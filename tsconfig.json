{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "js",
    "newLine": "LF",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "declarationDir": "typings",
    "declaration": true,
    "pretty": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
